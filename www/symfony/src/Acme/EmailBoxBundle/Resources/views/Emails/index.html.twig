{% include "default/index.html.twig" %}
{% block fos_user_content %}
<div id="navbar" class="navbar navbar-default          ace-save-state">
   <div class="navbar-container ace-save-state" id="navbar-container">
      <button type="button" class="navbar-toggle menu-toggler pull-left" id="menu-toggler" data-target="#sidebar">
      <span class="sr-only">Toggle sidebar</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      </button>
      <div class="navbar-header pull-left">
         <a href="http://ace.jeka.by/index.html" class="navbar-brand">
         <small>
         <i class="fa fa-leaf"></i>
         Inbox </br>
         {{ app.user.username }}   
         </small>
         </a>
      </div>
      <div class="navbar-buttons navbar-header pull-right" role="navigation">
         <a href="{{ logout_path('main') }}" class="navbar-brand">
         <small>
         <i class="fa fa-leaf"></i>
         Logout</br>
         </small>
         </a>
      </div>
      
   </div>
   <!-- /.navbar-container -->
</div>
{% endblock fos_user_content %}


{% block main_content %}
{% for inboxEmail in inboxEmails %}
<tr>
   <td>{{ inboxEmail.subject }}</td>
   <td>{{ inboxEmail.sendFrom }}</td>
   <td>{{ inboxEmail.sendTo }}</td>
   <td>{{ inboxEmail.date|date('Y-m-d H:i:s') }}</td>
   <td><a href="{{ path('email_details', { 'emailId': inboxEmail.id}) }}" class="status">View</a>
       <a href="{{ path('email_reply', { 'emailId': inboxEmail.id}) }}" class="status">Reply</a>
       <a href="{{ path('email_forward', { 'emailId': inboxEmail.id}) }}" class="status">Forward</a>
       <a href="{{ path('email_delete', { 'emailId': inboxEmail.id}) }}" class="status">Delete</a>
   </td>
</tr>
{% endfor %}
{% endblock main_content %}
