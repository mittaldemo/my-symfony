{% extends "EmailBoxBundle:Default:email_layout.html.twig" %}
{% block fos_user_content %}
<div id="navbar" class="navbar navbar-default ace-save-state">
   <div class="navbar-container ace-save-state" id="navbar-container">
      <button type="button" class="navbar-toggle menu-toggler pull-left" id="menu-toggler" data-target="#sidebar">
      <span class="sr-only">Toggle sidebar</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      </button>
      <div class="navbar-header pull-left">
         <a href="http://ace.jeka.by/index.html" class="navbar-brand">
         <small>
         <i class="fa fa-leaf"></i>
         Sent</br>
         {{ app.user.username }}
         </small>
         </a>
      </div>
      <div class="navbar-buttons navbar-header pull-right" role="navigation">
         <a href="{{ logout_path(app.security.token.providerKey) }}" class="navbar-brand">
         <small>
         <i class="fa fa-leaf"></i>
         Logout</br>
         </small>
         </a>
      </div>
   </div>
   <!-- /.navbar-container -->
</div>
{% endblock fos_user_content %}
{% block main_content %}
{% for sentEmail in sentEmails %}
<tr>
   <td>{{ sentEmail.subject }}</td>
   <td>{{ sentEmail.sendFrom }}</td>
   <td>{{ sentEmail.sendTo }}</td>
   <td>{{ sentEmail.date|date('Y-m-d H:i:s') }}</td>
   <td><a href="{{ path('email_details', { 'emailId': sentEmail.id}) }}">View</a>
      <a href="{{ path('email_delete', { 'emailId': sentEmail.id}) }}" class="status">Delete</a>
   </td>
</tr>
{% endfor %}
{% endblock main_content %}